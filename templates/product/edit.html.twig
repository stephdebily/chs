{% extends "base.html.twig" %}

{% block title %}
	Edition de
	{{ product.name }}
{% endblock %}

{% block body %}
	<h1>Editer le produit
		{{ product.name }}</h1>

	{{ form_start(formView) }}
	{{ form_errors(formView) }}

	<div class="row">
		<div class="col">
			{{ form_row(formView.name) }}
			{{ form_row(formView.price) }}
			{{ form_row(formView.stock) }}

		</div>
		<div class="col">
			{{ form_row(formView.picture) }}
			{{ form_row(formView.category) }}
			{{ form_row(formView.shortDescription) }}
		</div>

		<button type="submit" class="btn btn-primary">
			<i class="fas fa-save"></i>
			Modifier le produit
		</button>

		{{ form_end(formView) }}

	</div>
{% endblock %}
